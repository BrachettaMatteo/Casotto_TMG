<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicam.cs.IngegneriaDelSoftware.Casotto.Servizi.prenotazioneBalneareController">
   <children>
      <VBox layoutX="122.0" layoutY="41.0" prefHeight="124.0" prefWidth="275.0">
         <children>
            <HBox prefHeight="33.0" prefWidth="261.0" spacing="20.0">
               <children>
                  <Label text="Ombrellone" />
                  <ComboBox fx:id="comboOmbrelloni" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox prefHeight="33.0" prefWidth="261.0" spacing="34.0">
               <children>
                  <Label text="Materiale" />
                  <ComboBox fx:id="comboMateriali" onAction="#setQuantita" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox prefHeight="33.0" prefWidth="261.0" spacing="115.0">
               <children>
                  <Label text="Quantità" />
                  <Spinner fx:id="spinnereQuantita" prefHeight="26.0" prefWidth="71.0" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="62.0" prefHeight="33.0" prefWidth="261.0" spacing="115.0">
               <children>
                  <DatePicker fx:id="dataFine" onAction="#calcolaConto" promptText="dataFine" />
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="103.0" prefHeight="33.0" prefWidth="261.0">
               <children>
                  <Label text="Totale:" />
                  <Label fx:id="lbTotale" text="Label" />
                  <Label text="€" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="76.0" prefHeight="33.0" prefWidth="261.0" spacing="115.0">
               <children>
                  <Button fx:id="btnPrenota" mnemonicParsing="false" onAction="#prenota" text="Prenota" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
